.message-panel
  .messages
    = for message <- @messages do
      .message-container
        .message
          / = link_to message, method: :delete, remote: true, class: "message__delete" do
          /   | ğŸ—‘ï¸
          / = link_to edit_message_path(message), class: "message__delete" do
          /   | âœï¸
          .message__author = message.username || "Anonymous User"
          .message__time = message.inserted_at
          .message__content == message.content
          .message__edited
            = if edited? message do
              | edited #{message.updated_at}

  .message-form
    <div data-controller="hello">
      <input type="text">
      <button>Greet</button>
    </div>
    = render "form.html", assigns